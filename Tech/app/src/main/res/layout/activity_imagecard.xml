<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Imagecard">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coustom_edittext"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291"
        tools:layout_editor_absoluteX="16dp">


        <EditText
            android:id="@+id/addName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:drawablePadding="10dp"
            android:hint="Enter Name"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/addFname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:drawablePadding="10dp"
            android:hint="Enter Father Name"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/addMname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:drawablePadding="10dp"
            android:hint="Enter Mother Name"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/addGender"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:drawablePadding="10dp"
            android:hint="Enter Gender"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/addAddresse"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:drawablePadding="10dp"
            android:hint="Enter Addresse"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/addMob"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:drawablePadding="10dp"
            android:hint="Enter Mobile No. "
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>